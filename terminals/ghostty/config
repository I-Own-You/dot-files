# https://ghostty.org/docs/config/reference
# OTPIONS
theme = GitHub Dark
window-decoration = false
cursor-color = #33d17a
#fonts
font-family =
font-family-bold =
font-family-italic =
font-family-bold-italic =
# -calt, will disable ligatures, -dlig, -liga also avaialble(will remove all features realte to ligatures)
font-feature = 
font-size = 16
# line height
adjust-cell-height = 7
adjust-cursor-height = 7
# mouse interaction
mouse-hide-while-typing = true
# split options
unfocused-split-opacity = 1
# window padding
window-padding-x = 0, 0
window-padding-y = 0, 0
# not yet supported on linux
window-save-state = always
# clipboard options
clipboard-paste-protection = false
# only on linux with systemd, enable when you will have it
# linux-cgroup = 
# linux-cgroup-memory-limit = 
# linux-cgroup-processes-limit = 
# linux-cgroup-hard-fail = 

# KEYMAPS
# create splits
keybind = alt+enter>l=new_split:right
keybind = alt+enter>h=new_split:left
keybind = alt+enter>k=new_split:up
keybind = alt+enter>j=new_split:down
# resize splits
keybind = ctrl+shift+left=resize_split:left,50
keybind = ctrl+shift+right=resize_split:right,50
keybind = ctrl+shift+up=resize_split:up,50
keybind = ctrl+shift+down=resize_split:down,50
# move through splits
keybind = ctrl+shift+j=goto_split:bottom
keybind = ctrl+shift+k=goto_split:top
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+l=goto_split:right
# close split
keybind = alt+w=close_window
# scroll lines
keybind = alt+k=scroll_page_up
keybind = alt+j=scroll_page_down
keybind = alt+shift+j=jump_to_prompt:1
keybind = alt+shift+k=jump_to_prompt:-1
# increase font size
keybind = ctrl+shift+plus=increase_font_size:1
keybind = ctrl+shift+minus=decrease_font_size:1
keybind = ctrl+shift+0=reset_font_size
# toggle tab overview
keybind = ctrl+shift+o=toggle_tab_overview
# move tabs
keybind = shift+ctrl+comma=move_tab:-1
keybind = shift+ctrl+period=move_tab:+1
# reload config
keybind = ctrl+shift+f2=reload_config
# keybind = alt+k=scroll_page_lines:1000
